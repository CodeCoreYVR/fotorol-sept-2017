<%- include('../partials/header') %>
<section class="fotorol-list row justify-content-center">

  <div class="col-sm-8">
    <form
      class="d-flex flex-column"
      action="/posts"
      enctype="multipart/form-data"
      method='POST'
    >
      <div class="form-group">
        <input
          class="form-control"
          name="username"
          placeholder="Username"
          type="text"
        />
      </div>

      <div class="form-group">
        <input
          class="form-control"
          name="photo"
          type="file"
        />
      </div>

      <div class="form-group">
        <textarea
          class="form-control"
          rows='5'
          name='content'
          placeholder="What's on your mind?"
        ></textarea>
      </div>
      <input
        class="btn btn-outline-primary align-self-end"
        type='submit'
        value='Submit'
      />
    </form>
  </div>

  <% for (let post of posts) { %>
    <div class="col-sm-8">
      <div class="card">
        <div class="card-header">
          <strong><%= post.username %></strong>
        </div>
        <a href="/posts/<%= post.id %>">
          <img class="card-img" src="<%= post.photo_path %>">
        </a>
        <div class="card-body">
          <p class="card-text">
            <%= post.content %>
          </p>
        </div>
      </div>
    </div>
  <% } %>
</section>
<%- include('../partials/footer') %>
